# ============================================
# MANEXT - .htaccess Optimizado
# Última actualización: 2026-01-23
# ============================================

# ============================================
# TIPOS MIME
# ============================================

AddType image/avif .avif
AddType image/webp .webp
AddType application/manifest+json .webmanifest

# ============================================
# CACHE CONTROL - Optimización de rendimiento
# ============================================

<IfModule mod_expires.c>
    ExpiresActive On

    # Imágenes - 1 año
    ExpiresByType image/avif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # CSS y JavaScript - 1 año
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"

    # Fuentes - 1 año
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"

    # HTML - 1 hora (para actualizaciones frecuentes)
    ExpiresByType text/html "access plus 1 hour"

    # Manifest y datos
    ExpiresByType application/manifest+json "access plus 1 week"
    ExpiresByType application/json "access plus 1 hour"
</IfModule>

# Cache-Control Headers
<IfModule mod_headers.c>
    # Imágenes (incluyendo AVIF), CSS, JS - Cache inmutable por 1 año
    <FilesMatch "\.(avif|webp|jpg|jpeg|png|gif|svg|ico|css|js|woff|woff2|ttf)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # HTML - Cache corto con revalidación
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
</IfModule>

# ============================================
# COMPRESIÓN GZIP/BROTLI
# ============================================

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE text/xml
</IfModule>

# ============================================
# SEGURIDAD
# ============================================

# Ocultar información del servidor
ServerSignature Off

# Prevenir listado de directorios
Options -Indexes

# Headers de seguridad
<IfModule mod_headers.c>
    # HSTS - Forzar HTTPS por 1 año
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # Content Security Policy
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://app.rybbit.io https://wa.me; style-src 'self' 'unsafe-inline'; img-src 'self' https: data:; font-src 'self'; connect-src 'self' https://app.rybbit.io; frame-ancestors 'self'; base-uri 'self'; form-action 'self' https://wa.me"

    # Protección XSS
    Header set X-XSS-Protection "1; mode=block"

    # Prevenir sniffing de MIME
    Header set X-Content-Type-Options "nosniff"

    # Clickjacking protection
    Header set X-Frame-Options "SAMEORIGIN"

    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Permissions Policy
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Prevenir acceso a archivos sensibles
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# Bloquear acceso a archivos de configuración
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|sw[op])|~)$">
    Require all denied
</FilesMatch>

# ============================================
# REDIRECCIONES
# ============================================

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Forzar HTTPS
    RewriteCond %{HTTPS} off
    RewriteCond %{HTTP_HOST} !^localhost
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Forzar www (opcional - descomentar si se desea)
    # RewriteCond %{HTTP_HOST} !^www\. [NC]
    # RewriteCond %{HTTP_HOST} !^localhost
    # RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]

    # Remover trailing slash excepto directorios
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Página 404 personalizada
    ErrorDocument 404 /404.html
</IfModule>

# ============================================
# PROTECCIÓN CONTRA HOTLINKING
# ============================================

<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?mantenimientodeextintores\.mx [NC]
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?google\. [NC]
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?bing\. [NC]
    RewriteRule \.(avif|webp|jpg|jpeg|png|gif)$ - [F,NC,L]
</IfModule>
